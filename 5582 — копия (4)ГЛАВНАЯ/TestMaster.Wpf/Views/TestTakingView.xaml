<UserControl x:Class="TestMaster.Wpf.Views.TestTakingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="{Binding TestTitle}" FontSize="24" FontWeight="Bold"/>
            <TextBlock Text="{Binding CurrentQuestionText}" FontSize="18" Margin="0,20,0,10" TextWrapping="Wrap"/>

            <ItemsControl ItemsSource="{Binding CurrentAnswers}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <RadioButton Content="{Binding Text}" IsChecked="{Binding IsSelected}" GroupName="Answers" Margin="5"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <Button Content="Наступне питання" Command="{Binding NextQuestionCommand}" HorizontalAlignment="Left" Margin="0,20,0,0"/>
        </StackPanel>
    </Grid>
</UserControl>